JS
fetch('/api/nlp', {
  method: 'POST',
  headers: {
    'Content-Type': 'application/json',
  },
  body: JSON.stringify({ message: messageText }),
})
  .then((response) => response.json())
  .then((data) => {
    addMessageToChat(data.response, 'bot-message', true);
  });
